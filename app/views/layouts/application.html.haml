%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %link{rel: "stylesheet", href: "https://cdnjs.cloudflare.com/ajax/libs/normalize/7.0.0/normalize.min.css"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}
    %title ECSample
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
  %body{'data-controller': controller_path, 'data-action': action_name}
    = render 'layouts/header'
    %section#body
      .dummy-banner.is-bold.hide-sm
        This is a fake website made by
        %a{href: "https://andoshin11.github.io", target: "_blank"}Shin Ando.
        Check out
        %a{href: "https://chic-by-choice.com/", target: "_blank"} Chic by Choice
        for the real content.
      .dummy-banner.is-bold.hide-lg
        This is a fake website made by
        %a{href: "https://andoshin11.github.io", target: "_blank"}Shin Ando.
      = yield
  = include_gon
  = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
