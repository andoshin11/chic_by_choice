.breadcrumbs
  %i.fa.fa-angle-left
  = link_to 'BACK', :back, class: "back-btn"
  - if elements.present?
    %ul
      - elements[0..-2].each do |element|
        %li
          - if element.path.present?
            = link_to element.name, element.path
          - else
            = element.name
          %span.divider >
      = elements.last.name